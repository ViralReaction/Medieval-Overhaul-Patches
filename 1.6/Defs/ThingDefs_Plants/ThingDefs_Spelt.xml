<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="PlantBase">
		<defName>DankPyon_Plant_Spelt</defName>
		<label>einkorn plant</label>
		<description>A thin, fragile grain plant which produces small yellow seeds. Takes a relatively long time to grow and yields lots of food, but requires further processing to be eatable. Needs fertile soil to grow well.</description>
		<statBases>
			<MaxHitPoints>80</MaxHitPoints>
			<Nutrition>0.2</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Plants/WheatPlant</texPath>
			<color>(0.75,0.75,0.75,1)</color>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<selectable>true</selectable>
		<pathCost>10</pathCost>
		<ingestible/>
		<plant>
			<!--fertilityMin>0.70</fertilityMin-->
			<dieIfLeafless>true</dieIfLeafless>
			<harvestTag>Standard</harvestTag>
			<maxMeshCount>4</maxMeshCount>
			<harvestedThingDef>DankPyon_RawSpelt</harvestedThingDef>
			<harvestYield>25</harvestYield>
			<sowTags>
				<li>Ground</li>
				<li>Hydroponics</li>
			</sowTags>
			<topWindExposure>0.20</topWindExposure>
			<growDays>16</growDays>
			<fertilitySensitivity>0.9</fertilitySensitivity>
			<visualSizeRange>0.5~1.0</visualSizeRange>
			<immatureGraphicPath>Plants_Immature/WheatPlant</immatureGraphicPath>
			<wildOrder>2</wildOrder>
			<purpose>Food</purpose>
		</plant>
	</ThingDef>
	
	<ThingDef ParentName="RoughPlantBase">
		<defName>DankPyon_RawSpelt</defName>
		<label>einkorn</label>
		<description>Einkorn is a grain that can be milled into flour.</description>
		<graphicData>
			<texPath>Plants/RawWheat</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
			<color>(0.75,0.75,0.75,1)</color>
		</graphicData>
		<statBases>
			<MarketValue>1.1</MarketValue>
		</statBases>
		<ingestible>
			<foodType>Seed</foodType>
			<preferability>NeverForNutrition</preferability>
		</ingestible>
		<comps>
			<li Class="CompProperties_Rottable">
				<daysToRotStart>60</daysToRotStart>
				<rotDestroys>true</rotDestroys>
			</li>
		</comps>
		<thingCategories>
			<li>DankPyon_Cereal</li>
		</thingCategories>
	</ThingDef>
	
