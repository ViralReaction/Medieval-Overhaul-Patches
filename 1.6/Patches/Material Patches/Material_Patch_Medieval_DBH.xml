<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>DBH for Medieval</li>
		</mods>
	
		<match Class="PatchOperationSequence">
			<operations>
				
				<li Class="PatchOperationConditional">
					<xpath>/Defs/ThingDef[
					defName="BurnPit" or
					defName="BiosolidsComposter"]/costList/Steel					</xpath>
					<match Class="PatchOperationSetName">
						<xpath>/Defs/ThingDef[
					defName="BurnPit" or
					defName="BiosolidsComposter"]/costList/Steel						</xpath>
						<name>DankPyon_IronIngot</name>
					</match>
				</li>
				
			</operations>
		</match>
			
	</Operation>
		
</Patch>
