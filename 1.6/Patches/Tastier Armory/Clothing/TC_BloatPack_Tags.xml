<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Tastier Armory - Medieval European Armors</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
			
				<!-- Padded Armor -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[
					defName="TC_GambesonCoat" or
					defName="TC_ArmingDoublet" or
					defName="TC_Surcoat"]/apparel/tags					</xpath>
					<value>
						<li>DankPyon_Peasant</li>
						<li>DankPyon_BrigandThug</li>
						<li>DankPyon_Mercenary</li>
						<li>DankPyon_MercenaryHeavy</li>
						<li>DankPyon_Archer</li>
						<li>DankPyon_Footman</li>
						<li>DankPyon_Billman</li>
						<li>DankPyon_Knight</li>
						<li>DankPyon_HedgeKnight</li>
					</value>
				</li>
				
				<!-- Chain Armor -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[
					defName="TC_CoatOfPlates" or
					defName="TC_Hauberk" or
					defName="TC_ReinforcedGambeson"]/apparel/tags					</xpath>
					<value>
						<li>DankPyon_BrigandRaider</li>
						<li>DankPyon_BrigandLeader</li>
						<li>DankPyon_Mercenary</li>
						<li>DankPyon_Archer</li>
						<li>DankPyon_Footman</li>
						<li>DankPyon_Billman</li>
					</value>
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[
					defName="TC_CoifWithSecret" or
					defName="TC_KettleHat" or
					defName="TC_Nasal" or
					defName="TC_NasalCoif"]/apparel/tags					</xpath>
					<value>
						<li>DankPyon_BrigandRaider</li>
						<li>DankPyon_FootmanHelmet</li>
						<li>DankPyon_BillmanHelmet</li>
						<li>DankPyon_MercenaryHeavyHelmet</li>
					</value>
				</li>
				
				<!-- Plate Armor -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="TC_Brigandine"]/apparel/tags</xpath>
					<value>
						<li>DankPyon_Knight</li>
						<li>DankPyon_HedgeKnight</li>
					</value>
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[
					defName="TC_BrigandinePlate" or
					defName="TC_PlateArmor" or
					defName="TC_PlateCuirass"]/apparel/tags					</xpath>
					<value>
						<li>DankPyon_Knight</li>
					</value>
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[
					defName="TC_Armet" or
					defName="TC_Bascinet" or
					defName="TC_BascinetOpen" or
					defName="TC_Bevor" or
					defName="TC_Greathelm" or
					defName="TC_Sallet" or
					defName="TC_SalletFixedVisor"]/apparel/tags					</xpath>
					<value>
						<li>DankPyon_KnightHelmet</li>
						<li>DankPyon_HedgeKnightHelmet</li>
					</value>
				</li>
				
			</operations>
		</match>
		
	</Operation>
	
</Patch>