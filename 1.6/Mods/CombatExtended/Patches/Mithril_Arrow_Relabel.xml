<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Medieval Fantasy Themed Rare Resources</li>
		</mods>
			<match Class="PatchOperationSequence">
				<operations>

				<!-- Relabel Plasteel Arrows to Mithril -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/CombatExtended.AmmoCategoryDef[defName="PlasteelArrow"]/label</xpath>
					<value>
						<label>mithril arrow</label>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/CombatExtended.AmmoCategoryDef[defName="PlasteelCrossbowBolt"]/label</xpath>
					<value>
						<label>mithril crossbow bolt</label>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="Projectile_Arrow_Plasteel"]/label</xpath>
					<value>
						<label>arrow (mithril)</label>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="Projectile_StreamlinedArrow_Plasteel"]/label</xpath>
					<value>
						<label>streamlined arrow (mithril)</label>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="Projectile_GreatArrow_Plasteel"]/label</xpath>
					<value>
						<label>great arrow (mithril)</label>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="Projectile_HuntingArrow_Plasteel"]/label</xpath>
					<value>
						<label>streamlined hunting arrow (mithril)</label>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="Projectile_WarArrow_Plasteel"]/label</xpath>
					<value>
						<label>great war arrow (mithril)</label>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="Projectile_CrossbowBolt_Plasteel"]/label</xpath>
					<value>
						<label>crossbow bolt (mithril)</label>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="Projectile_DankPyonCrossbowBolt_Plasteel"]/label</xpath>
					<value>
						<label>normal crossbow bolt (mithril)</label>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="Projectile_ArbalestBolt_Plasteel"]/label</xpath>
					<value>
						<label>crossbow bolt (mithril)</label>
					</value>
				</li>

				<!-- Relabeling Arrow Recipe -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/RecipeDef[defName="MakeAmmo_Arrow_Plasteel"]/label</xpath>
					<value>
						<label>make mithril arrows x10</label>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/RecipeDef[defName="MakeAmmo_Arrow_Plasteel"]/description</xpath>
					<value>
						<description>Craft 10 mithril arrows.</description>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/RecipeDef[defName="MakeAmmo_Arrow_Plasteel"]/jobString</xpath>
					<value>
						<jobString>Making mithril arrows.</jobString>
					</value>
				</li>

				<!-- Relabeling Great Arrow Recipe -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/RecipeDef[defName="MakeAmmo_GreatArrow_Plasteel"]/label</xpath>
					<value>
