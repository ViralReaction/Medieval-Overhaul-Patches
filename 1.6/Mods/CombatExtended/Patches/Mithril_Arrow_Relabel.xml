				<li Class="PatchOperationReplace">
					<xpath>Defs/RecipeDef[defName="MakeAmmo_GreatArrow_Plasteel"]/description</xpath>
					<value>
						<description>Craft 10 mithril great arrows.</description>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/RecipeDef[defName="MakeAmmo_GreatArrow_Plasteel"]/jobString</xpath>
					<value>
						<jobString>Making mithril great arrows.</jobString>
					</value>
				</li>

				</operations>
			</match>
	</Operation>

</Patch>